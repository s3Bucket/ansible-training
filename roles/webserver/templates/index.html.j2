    <meta charset="UTF-8">
    <title>evoila Ansible Knowledge Challenge</title>
    <script src="solution.js"></script>
    <style>
        .answer {
            cursor: pointer;
            color: blue;
            text-decoration: underline;
            margin: 5px 0;
            display: inline-block;
        }
        .answer:hover {
            color: darkblue;
        }
    </style>
